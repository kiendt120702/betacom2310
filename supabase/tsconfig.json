{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "deno.ns"],
    "types": ["@supabase/functions-js/src/edge-runtime"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node"
  },
  "include": ["functions/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}